<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".aboutus"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/fbbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/fb"
        android:onClick="openfb"
        app:layout_constraintBottom_toTopOf="@+id/fbbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adi"
        app:layout_constraintTop_toBottomOf="@+id/fb" />

    <TextView
        android:id="@+id/adi"
        android:layout_width="201dp"
        android:layout_height="0dp"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Aditya Mengade"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sp"
        app:layout_constraintEnd_toStartOf="@+id/fbbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patil" />

    <TextView
        android:id="@+id/patil"
        android:layout_width="156dp"
        android:layout_height="0dp"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="109dp"
        android:text="Pratik Patil"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adi"
        app:layout_constraintEnd_toStartOf="@+id/fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/fb"
        android:onClick="fbpatil"
        app:layout_constraintBottom_toTopOf="@+id/fbbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/patil"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sp"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="20dp"
        android:text="Santosh Parakh"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sk"
        app:layout_constraintEnd_toStartOf="@+id/fbbtn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adi" />

    <Button
        android:id="@+id/fbbtn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/fb"
        android:onClick="fbparakh"
        app:layout_constraintBottom_toTopOf="@+id/fbbtn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sp"
        app:layout_constraintTop_toBottomOf="@+id/fbbtn" />

    <Button
        android:id="@+id/fbbtn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="154dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/fb"
        android:onClick="openfb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sk"
        app:layout_constraintTop_toBottomOf="@+id/fbbtn1" />

    <TextView
        android:id="@+id/sk"
        android:onClick="fbsk"
        android:layout_width="181dp"
        android:layout_height="0dp"
        android:layout_marginBottom="147dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="28dp"
        android:text="Amit Sonekar"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fbbtn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp" />
</android.support.constraint.ConstraintLayout>